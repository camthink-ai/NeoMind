{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "NeoMind",
  "version": "0.1.0",
  "identifier": "com.neomind.neomind",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NeoMind",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost https://localhost:3000 ws://localhost:3000 ws://localhost:5173",
        "font-src": "'self' https://fonts.gstatic.com",
        "img-src": "'self' asset: http://asset.localhost blob: data: https:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'"
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Developer Tool",
    "shortDescription": "Edge AI Platform",
    "longDescription": "NeoMind - Edge-deployed LLM agent platform for IoT automation",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "providerShortName": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "shell": {
      "open": [
        "^https://.*",
        "^http://localhost:[0-9]+.*"
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/your-org/neomind/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyQzE5MTI4RjYwOjQ4QjY5NEY3ODI3NjIwRDM1NjEwNzU5QTdCNzNCMDEwNjY0RjFGNjY2NDQ0Nzg1MDc1ODc4NjcwNjQwNjYwMzIwMDY4Njk2OTY4NjQ2OTY4NjU3Njg2OTY4NjQ2RTZFNzY4Njk2RTc0Njk2OTZFNjU2ODY5Njk2RTY5Nzk2NjY4NjU2OTc5NjU3NDY5Njk2NzY4Njk2ODZD"
    }
  }
}
